<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="navigation">
		<%= link_to "Projekt erstellen", new_project_path, :class => 'button' %>
		<ul>
		<% @projects.each do |project| %>
			<li><%= link_to project.name, project %></li>
		<% end %>
		</ul>
	</div>
	<div id="content">
		<%= yield %>
	</div>
</body>
</html>
