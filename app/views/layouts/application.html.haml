%html
	%head
		%title BugTracker
			
		!= stylesheet_link_tag 'application.css'
		!= javascript_include_tag "application"
		!= csrf_meta_tags
			
%body
	%header
		.container
			.logo BugTracking
			
			%nav
				%ul.navigation
					%li.first!= link_to 'Login', login_path
					%li.last!= link_to 'Register', login_path
					
			

	#content
		.container
			// flash notices
			.notice
				!= notice
			.alert
				!= alert

			!= yield
			
	%footer
		.container